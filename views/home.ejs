<%- include('./partials/head') %>

<section class="posts">
  <ul class="home-posts">
    <% articles.forEach(article => { { %>
    <li>
      <a href="/artikel/<%=article.id%>">
        <img src="<%=article.jetpack_featured_media_url%>" />
        <h2><%-article.title.rendered%></h2>
        <section>
          <h3>
            <%=article.yoast_head_json.author%>&nbsp;<span
              class="leestijd-articles"
            >
              - 3 min</span
            >
          </h3>
        </section>
      </a>
      %>
    </li>
    <% } }) %>
  </ul>
</section>

<%- include('./partials/foot') %>
